<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/list_item_icon_left_padding"
        tools:src="@android:drawable/star_big_off" />

    <TextView
        android:id="@+id/tvContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/list_item_top_bottom_padding"
        android:layout_marginEnd="@dimen/list_item_text_right_padding"
        android:layout_marginStart="@dimen/list_item_text_left_padding"
        android:layout_marginTop="@dimen/list_item_top_bottom_padding"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="@dimen/custom_font_size"
        tools:text="@string/app_name" />

</LinearLayout>
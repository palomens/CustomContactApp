<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="secondary_text_view_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/detail_activity_text_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:alpha">0.5</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/custom_font_size</item>
    </style>

    <style name="primary_text_view_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/detail_activity_text_padding</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/custom_font_size</item>
    </style>

</resources>
